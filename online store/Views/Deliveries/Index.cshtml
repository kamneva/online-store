@model IEnumerable<Laba4.Models.Delivery>

@{
    ViewData["Title"] = "Index";
}

<h1>Список доставок</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeliveryID">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.DeliveryID">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.DeliveryID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
